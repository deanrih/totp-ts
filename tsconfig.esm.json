{
	"compilerOptions": {
		"lib": [
			"ESNext",
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"outDir": "./dist",
		"removeComments": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*",
	]
}